layers =        20;
# Ton [Gew. %]:
clay =            18.0;
# Schluff [Gew. %]:
silt =          39.0;
# Sand [Gew. %]:
sand =          43.0;
#organische Substanz [Gew. %]:
# ???
organic_matter= 1.98;
