# Noah Bodenkategorie 6 Loam

[simulation]
start=1991-08-15
end=1992-01-01


[location]
#latitude in °
lat=13.0
#longitude in °
lon=51.0
#altitude
alt = 65.0
# N,NE,E,SE,S,SW,W,NW
exposition=SE
# Hangneigung:
inclination=15.1
# size [ha]
size = 1.0
# wind measure height [m]
wind_measure_height=2.0
# temperature measure height [m]
temp_measure_height=2.0

[climate]

# Average Year Temperature [°C]
AveYearTemp=7.4
# Average Year Amplitdude [°C]
MonthTempAmp=6.0


[soil]
# Schichtanzahl (10,100)
layer_count = 20
# Schichtdicke (1cm, 50cm) // einer Schicht
layer_thickness = 10.0
# Horizont:     1 
#Schichtnummer: 1-20
